<h2>User info</h2>
<%= render "users/error_message" %>
<%= form_with model:@user,local:true do |f| %>

<div>
  <label for="inputName">Name</label>
  <%= f.text_field:name,autofocus:true,id:"inputName" %>
</div>

<div>
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
</div>

<div>
  <label for="inputInt">Introduction</label>
  <%= f.text_field:introduction,autofocus:true,id:"inputInt" %>
</div>

<%= f.submit "Update User" %>
<% end %>