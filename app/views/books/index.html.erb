<div class="container pt-3 pb-5">
  <div class="row">
    <div class="col-md-3 pr-1">
      <%= render "books/error_message" %>
      <%= render "users/userinfo",user:@user %>
      <%= render "books/books",book:@book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <% @books.each do |book| %>
            <tbody>
              <tr>
                <td>
                  <% if @user.profile_image.present? %>
                    <%= image_tag book.user.profile_image, size: '100x100' %>
                  <% else %>
                    <p>NO IMAGE</p>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>

                <td>
                  <%= book.body %>
                </td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
