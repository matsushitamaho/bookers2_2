<h1>Book detail</h1>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@book.user.id) do %>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to @book.title %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <td>
          <% if @book.user == current_user %>
            <%= link_to "Edit",edit_book_path(@book) %>
          <% end %>
        </td>
        <td>
          <% if @book.user == current_user %>
            <%= link_to "Destroy",book_path(@book) %>
          <% end %>
        </td>
      </tr>
    </tbody>
