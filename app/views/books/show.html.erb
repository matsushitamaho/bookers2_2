<div class="container pt-3 pb-5">
  <div class="row">
    <div class="col-md-3 pr-1">
      <%= render "users/userinfo", user: @user, book: @book %>
      <%= render "books/books", book: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
      <div>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <% if @user.profile_image.present? %>
                    <%= image_tag @book.user.profile_image, size: '100x100' %>
                  <% else %>
                    <p>NO IMAGE</p>
                  <% end %>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Edit",edit_book_path(@book),class:"btn btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy",book_path(@book),method: :delete,class:"btn btn-danger", data: {confirm: "Are you OK?"} %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
